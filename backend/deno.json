{
	"compilerOptions": {
		"lib": [
			"deno.window"
		],
		"strict": true
	},
	"lint": {
		"files": {
			"include": [
				".",
				"lib/",
				"routes/"
			],
			"exclude": [
				"node_modules/"
			]
		},
		"rules": {
			"tags": [
				"recommended"
			],
			"include": [],
			"exclude": [
				"no-unused-vars"
			]
		}
	},
	"fmt": {
		"files": {
			"include": [
				".",
				"lib/",
				"routes/"
			],
			"exclude": [
				"node_modules/"
			]
		},
		"options": {
			"useTabs": true,
			"lineWidth": 80,
			"indentWidth": 4,
			"singleQuote": true,
			"proseWrap": "preserve"
		}
	},
	"tasks": {
		"start": "deno run --allow-net --allow-env --watch index.ts",
		"build": "echo 'Nothing to build'"
	}
}
